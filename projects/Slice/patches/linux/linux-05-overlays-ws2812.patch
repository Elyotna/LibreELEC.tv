--- a/arch/arm/boot/dts/overlays/ws2812-overlay.dts    	1970-01-01 01:00:00.000000000 +0100
+++ b/arch/arm/boot/dts/overlays/ws2812-overlay.dts	2016-10-01 09:21:19.276441744 +0100
@@ -0,0 +1,33 @@
+/dts-v1/;
+/plugin/;
+
+/ {
+	compatible = "brcm,bcm2708";
+
+	fragment@0 {
+		target = <&soc>;
+		__overlay__ {
+			#address-cells = <1>;
+			#size-cells = <1>;
+
+			ws2812: ws2812 {
+				compatible = "rpi,ws2812";
+				reg = <0x7e20c000 0x100>; /* PWM */
+				dmas = <&dma 5>;
+				dma-names = "pwm_dma";
+				led-en-gpios = <&gpio 43 0>;
+
+				rpi,invert = <1>;
+				rpi,num_leds = <25>;
+
+				status = "okay";
+
+			};
+		};
+	};
+
+	__overrides__ {
+		invert =        <&ws2812>,"rpi,invert:0";
+        num_leds =      <&ws2812>,"rpi,num_leds:0";
+	};
+};
